{
	"incremental": true,
	"lineWidth": 120,
	"useTabs": true,
	"indentWidth": 4,
	"typescript": {
		"importDeclaration.sortNamedImports": "maintain",
		"semiColons": "asi",
		"quoteStyle": "alwaysSingle",
		"jsx.quoteStyle": "preferSingle",
		"trailingCommas": "onlyMultiLine"
	},
	"json": {
	},
	"markdown": {
	},
	"toml": {
	},
	"includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml}"],
	"excludes": [
		"**/node_modules",
		"**/*-lock.json"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.59.2.wasm",
		"https://plugins.dprint.dev/json-0.13.2.wasm",
		"https://plugins.dprint.dev/markdown-0.11.2.wasm",
		"https://plugins.dprint.dev/toml-0.5.3.wasm"
	]
}
